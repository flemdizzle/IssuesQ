<h2> Issues assigned to <%= current_user.email %> </h2>
<div class="col-md-2">
  <table class="table">
    <tbody>
      <% @user_issues.each do |issue| %>
      <% issue_comments = issue.getComments %>
      <div onclick="location.href='';"  style="cursor:pointer;" >
        <tr href=<%= "https://github.com/#{issue.issue_url}" %> class="issues">
        <td>
<strong><%= issue.author %> </strong>:
            <% issue.getComments.each do |comment| %>
            <%= comment[:body] %>
            <% end %>
            <%= form_for(issue, url: "issues/#{issue.id}/close_issue/", html: {id: "close_issue#{issue.id}"}) do |f| %>
          <div class="form-group required">
            <%= f.submit("Close Issue", class: "btn btn-success") %>
          <% end %>
          </div>
          <% end %>
        </td>
      </tr>
    </div>
    </tbody>
  </table>
</div>